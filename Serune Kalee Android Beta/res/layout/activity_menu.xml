<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.serunekalee.MenuActivity" >
    
    <ImageButton
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:src="@drawable/ic_mainkan" />
    
    <ImageButton
        android:id="@+id/btnPetunjuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMain"
        android:layout_alignRight="@+id/btnMain"
        android:layout_below="@+id/btnMain"
        android:background="#ffffff"
        android:src="@drawable/ic_petunjuk" />

<!--
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMain"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMain"
        android:text="Demo" />
-->
    <ImageButton
        android:id="@+id/btnTentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPetunjuk"
        android:layout_below="@+id/btnPetunjuk"
        android:background="#ffffff"
        android:src="@drawable/ic_tentang" />
 
</RelativeLayout>